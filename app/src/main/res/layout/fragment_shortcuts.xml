<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:weightSum="3"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/short_back"
            android:clickable="true"
            android:id="@+id/depart"
            >
                <ImageView
                    android:layout_marginTop="25dp"
                    android:id="@+id/img_dep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/depart"

                    android:layout_centerHorizontal="true"
                    />
                <Button
                    android:layout_below="@+id/img_dep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الاقسام"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:background="#00747171"

                    />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/short_back"
            android:clickable="true"
            android:id="@+id/products"
            >
            <ImageView
                android:layout_marginTop="25dp"
                android:id="@+id/img_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/product"
                android:layout_centerHorizontal="true"
                />
            <Button
                android:layout_below="@+id/img_product"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="منتجاتنا"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:background="#00747171"
                android:layout_gravity="center"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/short_back"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:id="@+id/services"

            >
            <ImageView
                android:layout_marginTop="25dp"
                android:id="@+id/img_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/service"
                android:layout_centerHorizontal="true"
                />
            <Button
                android:layout_below="@+id/img_service"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="خدماتنا"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:background="#00747171"
                android:layout_gravity="center"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/short_back"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:id="@+id/offers"
            >


            <ImageView
                android:layout_marginTop="25dp"
                android:id="@+id/img_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/offer2"
                android:layout_centerHorizontal="true"
                />
            <Button
                android:layout_below="@+id/img_offer"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="عروضنا"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:background="#00747171"
                android:layout_gravity="center"
                />

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/short_back"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:id="@+id/nnew"
            >
            <ImageView
            android:layout_marginTop="25dp"
            android:id="@+id/img_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/news"
            android:layout_centerHorizontal="true"
            />
            <Button
                android:layout_below="@+id/img_news"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اخبارنا"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:background="#00747171"
                android:layout_gravity="center"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/short_back"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:id="@+id/ideas"
            >
            <ImageView
            android:layout_marginTop="25dp"
            android:id="@+id/img_idea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/offer"

            android:layout_centerHorizontal="true"
            />
            <Button
                android:layout_below="@+id/img_idea"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="افكار جديده"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:background="#00747171"
                android:layout_gravity="center"
                />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
